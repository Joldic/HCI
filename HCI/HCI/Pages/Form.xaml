            <DataGrid  x:Name="DataGridXAML" ItemsSource="{Binding Data}" HorizontalAlignment="Center" VerticalAlignment="Top" Width="340" Height="214" Margin="0,145,0,0">
                <!-- Font Color / Style of Column Headings-->
                <DataGrid.Resources>
                    <Style TargetType="{x:Type DataGridColumnHeader}" >
                        <Setter Property="Background" Value="Turquoise"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="BorderThickness" Value="0, 0 , 1 ,2"/>
                        <Setter Property="BorderBrush" Value="Black"/>

                    </Style>
                </DataGrid.Resources>
                <!-- Column Header Text & Bindings -->
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="70"/>
                    <DataGridTextColumn Header="Form Id" Binding="{Binding FormId}" Width="70"/>
                    <DataGridTextColumn Header="Grade" Binding="{Binding Grade}" Width="102"/>
                    <DataGridTextColumn Header="Patient Id" Binding="{Binding PatientId}" Width="100"/>

                </DataGrid.Columns>
            </DataGrid>

