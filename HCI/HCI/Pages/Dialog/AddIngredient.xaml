<Page x:Class="HCI.Pages.Dialog.AddIngredient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HCI.Pages.Dialog"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="430"
      Title="AddIngredient">

    <Grid Background="White" ButtonBase.Click="Grid_Click">
        <ComboBox Name="Names" HorizontalAlignment="Left" Margin="120,153,0,0" VerticalAlignment="Top" Width="178">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Label Content="Add alergen" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,33,0,0" VerticalAlignment="Top"/>
        <Label Content="Name" HorizontalAlignment="Left" FontWeight="Medium" Margin="189,109,0,0" VerticalAlignment="Top"/>
        <Button Content="Add" HorizontalAlignment="Left" Margin="180,204,0,0" VerticalAlignment="Top" Click="AddButton_Click"/>

    </Grid>
</Page>
